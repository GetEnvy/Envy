<?xml version="1.0" encoding="UTF-8"?>
<skin xmlns="http://schemas.getenvy.com/Skin.xsd" version="1.0">

<menus replace="false">
	<menu name="ImageViewer_Context">
		<item id="PluginID_ImageViewer_FullSize" text="_Actual Size"/>
		<item id="PluginID_ImageViewer_BestFit" text="_Best Fit"/>
		<separator/>
		<item id="PluginID_ImageViewer_Refresh" text="_Refresh"/>
		<separator/>
		<item id="PluginID_ImageViewer_Close" text="_Close"/>
	</menu>
</menus>

<toolbars replace="false">
	<toolbar name="ImageViewerWnd">
		<button id="PluginID_ImageViewer_FullSize" text="Actual Size"/>
		<button id="PluginID_ImageViewer_BestFit" text="Best Fit"/>
		<separator/>
		<button id="PluginID_ImageViewer_Refresh" text="Refresh"/>
			<rightAlign/>
		<button id="PluginID_ImageViewer_Close" text="Close"/>
	</toolbar>
</toolbars>

<commandImages replace="false">
	<bitmap id="204">
		<image id="PluginID_ImageViewer_FullSize"/>
		<image id="PluginID_ImageViewer_BestFit"/>
		<image id="PluginID_ImageViewer_Refresh"/>
		<image id="PluginID_ImageViewer_Close"/>
	</bitmap>
</commandImages>

<commandTips replace="false">
	<tip id="PluginID_ImageViewer_FullSize" message="Show the image at its normal size."/>
	<tip id="PluginID_ImageViewer_BestFit" message="Resize the image to fit within the window."/>
	<tip id="PluginID_ImageViewer_Refresh" message="Reload the image."/>
	<tip id="PluginID_ImageViewer_Close" message="Close the image viewer window."/>
</commandTips>

</skin>
